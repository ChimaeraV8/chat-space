
.member-info
  .member-info__member-name
    = message.user.name
  .member-info__time-stamp
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.message-items
  - if message.text.present?
    .message
      = message.text
  = image_tag message.photo.url, class: 'message-items__message--image' if message.photo.present?
